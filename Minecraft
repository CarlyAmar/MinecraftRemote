#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
echo $PWD
source $DIR/Settings
echo $ScriptLocation
echo "Welcome to my Alpha launcher!"
echo "What would you like to do?"
echo "Play | Patchlwjgl"
read quest
cd $ScriptLocation
if [ $quest == "Play" ] ; then
    bash $ScriptLocation/Launcher
fi

if [ $quest == "Patchlwjgl" ] ; then
    echo "Local or Online?"
    read PatchMethod
    if [ $PatchMethod == "Online" ] ; then
        echo "Patching from Online source!"
        bash $ScriptLocation/lwjglOnline
    fi
    if [ $PatchMethod == "Local" ] ; then
        echo "Patching from Local Source!"
        bash $ScriptLocation/lwjglLocal
    fi
fi
if [ $quest == "Mod" ] ; then 
    bash $ScriptLocation/ModManager
fi