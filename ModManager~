Mod_Manager () {
ls --color $PathToMods
ls --color ~/.minecraft/mods
echo "Which mod would you like to add/delete?"
read Mod

echo "Would you like this to be added, or deleted? [Add] [Delete]"
read Operation


if [ $Operation == "Delete" ] ; then
    rm ~/.minecraft/mods/$Mod
    echo "Removed $Mod"
fi
echo "Continue Modding? [Y/N]"
read Modding
}

